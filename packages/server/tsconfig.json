{
  "compilerOptions": {
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "composite": true,
    "outDir": "../build/server"
  },
  "references": [
    {
      "path": "../client"
    },
    {
      "path": "../common"
    }
  ],
  "lib": [
    "es2015"
  ],
  "include": [
    "src"
  ]
}
